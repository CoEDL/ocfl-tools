{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://ocfl-indexer/json-validation-schema/schema.json",
    "title": "Item",
    "description": "An item ingested in to OCFL",
    "type": "object",
    "properties": {
        "@id": {
            "type": "array",
            "maxItems": 1,
            "items": {
                "const": "./"
            }
        },
        "name": {
            "type": "array",
            "maxItems": 1,
            "items": {
                "type": "string"
            }
        },
        "description": {
            "type": "array",
            "maxItems": 1,
            "items": {
                "type": "string"
            }
        },
        "identifier": {
            "type": "array",
            "items": {
                "type": ["object", "string"],
                "properties": {
                    "@type": {
                        "type": "array",
                        "maxItems": 1,
                        "items": {
                            "const": "PropertyValue"
                        }
                    },
                    "name": {
                        "type": "array",
                        "maxItems": 1,
                        "items": {
                            "type": "string"
                        }
                    },
                    "value": {
                        "type": "array",
                        "maxItems": 1,
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["@type", "name", "value"]
            },
            "contains": {
                "type": "object",
                "properties": {
                    "@type": {
                        "type": "array",
                        "maxItems": 1,
                        "items": {
                            "const": "PropertyValue"
                        }
                    },
                    "name": {
                        "type": "array",
                        "maxItems": 1,
                        "items": {
                            "enum": ["domain", "id", "hashId"]
                        }
                    }
                }
            }
        }
    },
    "required": ["@id", "name", "identifier"]
}
