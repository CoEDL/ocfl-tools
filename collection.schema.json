{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://ocfl-indexer/collection.schema.json",
    "title": "Item",
    "description": "A collection ingested in to OCFL",
    "type": "object",
    "properties": {
        "id": {
            "const": "/"
        },
        "schema:additionalType": {
            "type": "string",
            "const": "collection"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "object",
            "properties": {
                "familyName": {
                    "type": "string"
                },
                "givenName": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "geo": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "GeoShape"
                },
                "box": {
                    "type": "string"
                }
            }
        },
        "identifier": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "required": ["type", "name"]
            },
            "contains": {
                "type": "object",
                "properties": {
                    "type": {
                        "const": "PropertyValue"
                    },
                    "name": {
                        "enum": [
                            "domain",
                            "id",
                            "hashId",
                            "collectionIdentifier"
                        ]
                    }
                }
            }
        },
        "http://pcdm.org/models#hasMember": {
            "type": ["object", "array"],
            "properties": {
                "id": {
                    "type": "string"
                }
            },
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "id",
        "schema:additionalType",
        "name",
        "author",
        "identifier",
        "http://pcdm.org/models#hasMember"
    ]
}
